{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "console_title": true,
  "console_title_style": "folder",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "diamond",
          "foreground": "#ffffff",
          "background": "#ff479c",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "template": "  {{ .Path }}"
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#193549",
          "background": "#fffb38",
          "powerline_symbol": "\ue0b0",
          "template": " {{ .HEAD }}{{if or (.Working.Modified) (.Working.Deleted)}} ●{{end}}{{if .Staging.Changed}} ✓{{end}}{{if gt .Working.Untracked 0}} …{{end}}",
          "properties": {
            "fetch_status": true
          }
        }
      ]
    }
  ]
}
